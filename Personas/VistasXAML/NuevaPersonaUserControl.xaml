<UserControl x:Class="Personas.VistasXAML.NuevaPartidaUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Personas.VistasXAML"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <StackPanel Margin="10">
        <TextBlock Text="Nombre"/>
        <TextBox Text="{Binding Path=NuevaPersona.Nombre}"/>

        <TextBlock Text="Edad" />
        <TextBox Text="{Binding Path=NuevaPersona.Edad}" />

        <TextBlock Text="Nacionalidad" />
        <StackPanel Orientation="Horizontal">
            <ComboBox ItemsSource="{Binding Path=Nacionalidades}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
