<Window x:Class="Personas.VistasXAML.DialogoAddNacionalidad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Personas.VistasXAML"
        mc:Ignorable="d"
        Title="Añadir nacionalidad" 
        Height="130" 
        Width="270"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <StackPanel
        Margin="10">
        <TextBlock Text="Nacionalidad"/>
        <TextBox Text="{Binding Path=Nacionalidad}"/>
        <StackPanel Orientation="Horizontal"
                    Margin="0,5,0,0">
            <Button x:Name="aceptarButton"
                Content="Aceptar"
                    Margin="0,0,10,0"
                    IsDefault="True"
                    Click="aceptarButton_Click"/>
            <Button Content="Cancelar"
                    IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
